<div id="post-content">
  <h1 class="post-title"><%= @post.title %></h1>

  <p class="created-at">
    Submitted <%= time_ago_in_words(@post.created_at) %> ago |
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%=	link_to 'Delete', posts_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>

  <p class="post-body">
    <%= @post.body %>
  </p>
</div>